extends ../shared/layout

block content
  .container
    if (collection)
      h2 View users
      hr
      table.bs-table.default.striped
        thead
          tr
            th Username
            th Email
            th(width="20%") ID
        tbody
          each user in collection
            tr
              td: a(href="/users/#{user.id}")=user.username
              td=user.email
              td=user.id
    else
      h2 No Users Found!