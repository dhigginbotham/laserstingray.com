extends ../layout

block content
  .container
    .row
      .alert.alert-warning.hidden(id="msgContainer"): p
      h1 Blog Editor
      hr
      form.form-horizontal(method="post", id="saveBlogForm")
        .form-group
          label.col-sm-2.control-label(for="title") Title
          .col-sm-10
            input.form-control(type="text", name="title", id="title", placeholder="Title", value="#{blog ? blog.title : '' }")
        .form-group
          label.col-sm-2.control-label(for="body") Content
          .col-sm-10
            textarea.form-control(type="text", name="body", id="body") #{blog ? blog.body : ''}
        .form-group
          .col-sm-12
            button.pull-right.btn.btn-primary(type="submit", id="saveBlogBtn", data-form-selector="#saveBlogForm") Save
